{{!< default}}

{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

<main id="site-main">
  <div class="container">
    {{> "breadcrumbs"}}

    <div class="inner">
      <section id="subscribe" class="post-content subscribe-content">
        <h1 class="subscribe-form-title">{{t "Join Our Newsletter"}}</h1>
        <p class="subscribe-form-subtitle">{{t "Get the latest updates delivered right to your inbox"}}</p>
        {{subscribe_form
          form_id="subscribe-form"
          form_class="subscribe-form full-page"
          placeholder=(t "Enter your email address")
        }}
      </section>
    </div>
  </div>
</main>
